<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>cimian</id>
    <version>{{VERSION}}</version>
    <authors>Windows Admins Open Source</authors>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Cimian Tools for Windows Software Management</description>
    <tags>admin</tags>
  </metadata>
  <files>
    <file src="..\..\release\arm64\**" target="tools" />
    <file src="scripts\chocolateyInstall.ps1" target="tools" />
    <file src="scripts\chocolateyUninstall.ps1" target="tools" />
    <file src="scripts\install-scheduled-tasks.ps1" target="tools" />
    <file src="scripts\uninstall-scheduled-tasks.ps1" target="tools" />
    <!-- Include .ignore files to prevent Chocolatey from creating automatic shims -->
    <file src="scripts\*.exe.ignore" target="tools" />
  </files>
</package>
